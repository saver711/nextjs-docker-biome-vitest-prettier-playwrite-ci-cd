		"@types/node": "20",
		"@types/react": "19",
		"@types/react-dom": "19",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"tailwindcss": "4",
		"typescript": "5"
	},
	"lint-staged": {
		"*": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
